<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:scrollview_main"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:ability_background"
    ohos:bottom_padding="16vp"
    ohos:focusable="focus_enable">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="horizontal_center"
            ohos:layout_alignment="horizontal_center"
            ohos:text="Health Summary"
            ohos:text_color="#C1C1C1"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="24fp"
            ohos:top_margin="60fp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="horizontal_center"
            ohos:layout_alignment="horizontal_center"
            ohos:orientation="horizontal"
            ohos:top_margin="10fp">

            <Image
                ohos:id="$+id:imageCalories"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:fire"/>

            <Text
                ohos:id="$+id:text_calories_value"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:alignment="horizontal_center"
                ohos:layout_alignment="horizontal_center"
                ohos:text="-"
                ohos:text_color="#C1C1C1"
                ohos:start_margin="20fp"
                ohos:text_size="18fp" />

            <Image
                ohos:id="$+id:imageHeartRate"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="35fp"
                ohos:image_src="$media:heartRate"/>

            <Text
                ohos:id="$+id:text_heart_rate_value"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:alignment="horizontal_center"
                ohos:layout_alignment="horizontal_center"
                ohos:text="-"
                ohos:text_color="#C1C1C1"
                ohos:start_margin="20fp"
                ohos:text_size="18fp" />

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="horizontal_center"
            ohos:layout_alignment="horizontal_center"
            ohos:orientation="horizontal"
            ohos:top_margin="20fp">

            <Image
                ohos:id="$+id:imageSteps"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:steps"/>

            <Text
                ohos:id="$+id:text_steps_value"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:alignment="horizontal_center"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="18fp"
                ohos:start_margin="20fp"
                ohos:text="-"
                ohos:text_color="#C1C1C1"/>

            <Image
                ohos:id="$+id:imageOxygen"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="35fp"
                ohos:image_src="$media:oxygen"/>

            <Text
                ohos:id="$+id:text_oxygen_value"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:alignment="horizontal_center"
                ohos:layout_alignment="horizontal_center"
                ohos:start_margin="20fp"
                ohos:text_size="18fp"
                ohos:text="-"
                ohos:text_color="#C1C1C1"/>
        </DirectionalLayout>
    </DirectionalLayout>
</ScrollView>
