<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$graphic:ability_background"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:file_name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Song Title"
        ohos:bottom_margin="20fp"
        ohos:text_color="#C1C1C1"
        ohos:text_size="18fp" />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">

        <Image
            ohos:id="$+id:imgVolumeLoud"
            ohos:height="match_content"
            ohos:top_margin="20fp"
            ohos:width="match_content"
            ohos:image_src="$media:volume_loud"/>

        <Image
            ohos:id="$+id:imgPlayer"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:play_arrow"
            ohos:left_margin="40fp"
            ohos:right_margin="40fp"/>

        <Image
            ohos:id="$+id:imgVolumeQuiet"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="20fp"
            ohos:image_src="$media:volume_quiet"/>
    </DirectionalLayout>

</DirectionalLayout>