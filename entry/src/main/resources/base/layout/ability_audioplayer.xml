<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:parent_wrapper"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:ability_background"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:options_wrapper"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical">

        <Button
            ohos:id="$+id:button_local_file"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:button_background"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="10fp"
            ohos:text="Play Local File"
            ohos:text_color="#FFFFFF"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:button_radio"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:button_background"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="10fp"
            ohos:text="Play Radio"
            ohos:text_color="#FFFFFF"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:button_last_recording"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:button_background"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="10fp"
            ohos:text="Play Last Recording"
            ohos:text_color="#FFFFFF"
            ohos:top_margin="16fp"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:controller_wrapper"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:visibility="hide">

        <Image
            ohos:id="$+id:imgVolumeLoud"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:volume_loud"/>

        <Image
            ohos:id="$+id:imgPlayer"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:play_arrow"
            ohos:left_margin="80px"
            ohos:right_margin="80px"/>

        <Image
            ohos:id="$+id:imgVolumeQuiet"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:volume_quiet"/>

    </DirectionalLayout>

    <Text
        ohos:id="$+id:file_name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Song Title"
        ohos:text_color="#FFFFFF"
        ohos:text_size="30px"
        ohos:text_weight="700"
        ohos:top_margin="50px"
        ohos:visibility="hide"/>

</DirectionalLayout>