<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:parent_wrapper"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$graphic:ability_background"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:button_local_file"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:button_background"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10fp"
        ohos:text="Play Local File"
        ohos:text_color="#FFFFFF"
        ohos:top_margin="16fp"/>

    <Button
        ohos:id="$+id:button_radio"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:button_background"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10fp"
        ohos:text="Play Radio"
        ohos:text_color="#FFFFFF"
        ohos:top_margin="16fp"/>

    <Button
        ohos:id="$+id:button_last_recording"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:button_background"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10fp"
        ohos:text="Play Last Recording"
        ohos:text_color="#FFFFFF"
        ohos:top_margin="16fp"/>
</DirectionalLayout>