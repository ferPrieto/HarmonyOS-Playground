<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:ability_background"
    ohos:orientation="vertical">

    <Text
        ohos:top_margin="8fp"
        ohos:text_alignment="center"
        ohos:layout_alignment="horizontal_center"
        ohos:hint="Weather status XX"
        ohos:text_size="18fp"
        ohos:auto_scrolling_count="unlimited"
        ohos:truncation_mode="auto_scrolling"
        ohos:id="$+id:weather_status_text"
        ohos:text_color="#C1C1C1"
        ohos:height="match_content"
        ohos:width="200fp"/>

    <RoundProgressBar
        ohos:top_margin="8fp"
        ohos:visibility="hide"
        ohos:layout_alignment="horizontal_center"
        ohos:id="$+id:round_progress_bar"
        ohos:height="48fp"
        ohos:width="48fp"
        ohos:progress_width="10vp"
        ohos:progress="0"/>

</DirectionalLayout>