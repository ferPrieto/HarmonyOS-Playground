<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#000000"
    ohos:id="$+id:parent_wrapper"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:id="$+id:options_wrapper"
            ohos:alignment="center"
            ohos:orientation="vertical">

        <Button
                ohos:id="$+id:button_local_file"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$graphic:background_ability_main"
                ohos:text="Play Local File"
                ohos:layout_alignment="horizontal_center"
                ohos:padding="8fp"
                ohos:top_margin="16fp"/>

        <Button
                ohos:id="$+id:button_radio"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="Play Radio"
                ohos:background_element="$graphic:background_ability_main"
                ohos:layout_alignment="horizontal_center"
                ohos:padding="8fp"
                ohos:top_margin="16fp"/>

        <Button
                ohos:id="$+id:button_last_recording"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="Play Last Recording"
                ohos:background_element="$graphic:background_ability_main"
                ohos:layout_alignment="horizontal_center"
                ohos:padding="8fp"
                ohos:top_margin="16fp"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:id="$+id:controller_wrapper"
        ohos:visibility="hide"
        ohos:orientation="horizontal">

        <Image
            ohos:id="$+id:imgVolumeLoud"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:volume_loud"/>

        <Image
            ohos:id="$+id:imgPlayer"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="80px"
            ohos:right_margin="80px"
            ohos:image_src="$media:play_arrow"/>

        <Image
            ohos:id="$+id:imgVolumeQuiet"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:volume_quiet"/>

    </DirectionalLayout>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:visibility="hide"
        ohos:top_margin="50px"
        ohos:id="$+id:file_name"
        ohos:text="Song Title"
        ohos:text_size="30px"
        ohos:text_weight="700"
        ohos:text_color="#FFFFFF"/>

</DirectionalLayout>